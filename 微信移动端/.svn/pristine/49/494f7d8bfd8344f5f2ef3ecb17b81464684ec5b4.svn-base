/*公共样式*/
body {
	/*文字样式*/
	font-size: 12px;
	color: #ffffff;
	font-family: "Arial","Microsoft Yahei","SimSun";
	position: relative;
}
a {
	text-decoration: none;
	color: #fff;
}
.message {
	/* width: 100%; */
	/*height:  18.8rem;*/
	background-image: url('../images/beijing@2x.png');
	background-size: 100% 100%;
	padding: 0.9rem 0.40rem 1.2rem 0.40rem;
}
.message .header {
	width: 6rem;
	height: 1.56rem;
	/*background-image: url('../images/biaoti@2x.png');*/
	margin:  0 auto;
	text-align: center;
	/* margin-top: 45px; */
	/*background-size: 6rem 1.56rem;*/
}

.header_tit1, .header_tit2 {
	width: 6rem;
	text-align: center;
	font-size: 25px;
	font-style: italic;
	color: #ffffff;
}

.message .tigao {
	margin-top: 1.0rem;
/*	height: 5.3rem;
	background-image: url('../images/kuang1@2x.png');
	background-size: 100% 5.3rem;*/
}
.message .tigao .title {
	height: 0.90rem;
	padding-bottom: 0.8rem;
	text-align: center;
	line-height: 0.90rem;
	font-size: 0.34rem;
	color: #ffffff;
	background-image: url('../images/kuang01top.png');
	background-size: 100% 100%;
}
.message .tigao .xiangqing {
	padding:  0.60rem 0.50rem;
	font-size: 0.30rem;
	line-height: 0.40rem;
	color: #ffffff;
	background-color: #476EFD;
	border-radius: 10px;
/*	background-image: url('../images/kuang01ft.png');
	background-size: 100% 100%;*/
}
.message .tianxie {
	margin-top: 0.80rem;
	height: 7.04rem;
	background-image: url('../images/kuang2@2x.png');
	background-size: 100% 7.04rem;
}
.message .tianxie .title {
	height: 0.90rem;
	text-align: center;
	line-height: 0.90rem;
	font-size: 0.34rem;
	color: #ffffff;
}
.message .tianxie .form {
	margin-top: 0.8rem;
	padding: 0.5rem 0.64rem;
}
.message .tianxie .form .kuang{
	height: 0.90rem;
	line-height: 0.90rem;
	padding-left: 0.4rem;
	margin-bottom: 0.26rem;
	font-size: 0.28rem;
	width: 5.26rem;
	background-color: #415eee;
	border: none;
	color: #ffffff;
	position: relative;
}
.message .tianxie .form input::-webkit-input-placeholder {
	color: #ffffff;
	/* color: red; */
}
.message .tianxie .form .kuang select{
	display: block;
	color: #ffffff;
	background-color: #415eee;
	border: none;
	width: 5.26rem;
	height: 0.90rem;
	line-height: 0.90rem;
	-webkit-appearance: none;
}
.message .tianxie .form .arrow {
	position: absolute;
	width: 0rem;
	height: 0rem;
	border-style: solid;
	border-width: 0.25rem 0.15rem 0rem 0.15rem;
	border-color: #ffffff transparent transparent transparent;
	right: 0.3rem;
	top: 0.3rem;
}
.message .tianxie .form .kuang:last-child {
	margin-bottom: 0rem; 
}
.message .zixun, .message .teacher {
	font-size: 0.28rem;
	color: #ffffff;
	height: 0.4rem;
	line-height: 0.4rem;
}
.message .zixun {
	margin-top: 0.5rem;
}
.footer {
	/* display: flex; */
	height: 1rem;
	line-height: 1rem;
	color: #ffffff;
	font-size: 0.3rem;
	position: fixed;
	left: 0rem;
	bottom: 0rem;
	display: flex;
}
.footer .left {
	float: left;
	width: 5.20rem;
	height: 1rem;
	background-color: #4977fe;

}
.footer .left .quanke {
	padding-left: 0.3rem;
	width: 1.6rem;
	/* display: block; */
	margin-right: 0.5rem;

}
.footer .left .money {
	width: 2.8rem;
	/* display: block; */
}
.footer .buy {
	width: 2.3rem;
	height: 1rem;
	background-color: #fca20d;
	border: none;
	/* display: block; */
}
input[type=button], input[type=submit], input[type=file], button { cursor: pointer; -webkit-appearance: none; } 

