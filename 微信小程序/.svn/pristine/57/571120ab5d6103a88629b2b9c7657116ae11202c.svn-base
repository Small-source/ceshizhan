.page {
  padding:0 30rpx;
  padding-bottom: 100rpx;
  font-size: 28rpx;
  background-color: #fff;
}
.main {
  border-bottom: 1px solid #DEDEDE;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  height: 84rpx;
  line-height: 84rpx;

}
.main_type text {
  color: #F50505;
  position: relative;
  top: 4rpx;
}
.main image {
  width: 17rpx;
  height: 23rpx;
}
.main .title{
  padding-left: 20rpx;
}
.main .mid{
  flex: 1;
  height: 84rpx;
  padding: 0 10rpx;
}
.main .picker {
  height: 84rpx;

}
.main_type {
  background-color: #fff;
  border: none;
  padding:0 30rpx;
  height: 106rpx;
  line-height: 106rpx;
  margin-bottom: 10rpx;
}
.main_type .title {
  padding-left: 0;
}
.main_type .mid {
  height: 106rpx;
}
.main_type .picker {
  line-height: 106rpx;
}
.mian_dasai {
  padding-top: 0;
}
.mian_dasai .picker{
  line-height: 36rpx;
  display: flex;
  align-items: center;
}
.main_file {
  padding: 20rpx 0 60rpx 0;
  border-bottom: 1px solid #DEDEDE;
}
.main_file .title {
  padding-left: 20rpx;
  line-height: 80rpx;
}
.main_des {
  border: none;
}
.s_color {
  color: #7F7F7F;
  /* font-size: 14px; */
}

.main_file .content {
  padding-left: 20rpx;
}

.main_file .btn_upload {
  width: 180rpx;
  height: 180rpx;
  text-align: center;
  line-height: 180rpx;
  background-color: #DEDEDE;
  color: #fff;
  font-weight: bold;
  font-size: 50rpx;
}
.main_file .img_box {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border: 1px solid #dedede;
  border-radius: 5px;
}
.main_file .img_box .btn_remove {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -20rpx;
  right: -20rpx;
}
.main_file image {
  width: 100%;
  height: 100%;
}
.main_file textarea {
  min-height: 80rpx;
  width: 100%;

}













.fixed_btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  color: #fff;
  text-align: center;
  background-color: #3979FD;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
}