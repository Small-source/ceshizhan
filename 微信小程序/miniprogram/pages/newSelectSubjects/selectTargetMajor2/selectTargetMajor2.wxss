/* pages/selectTargetMajor/selectTargetMajor2.wxss */
.header {
  height:65px;
  display: flex;
  align-items: center;
}
.searchBox {
  box-sizing: border-box;
  width: 690rpx;
  height: 32px;
  border: 1px solid #DEDEDE;
  margin: 0 auto;
  border-radius: 32px;
  display: flex;
  align-items: center;
}
.searchBox input {
  flex: 1;
  padding-left: 30rpx;
}
.searchBox view {
  width: 40rpx;
  height: 40rpx;
  padding-right: 30rpx;
}
.bottom {
  display: flex;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow: 0rpx 0rpx 10rpx #dedede;
  height: 50px;
  line-height: 50px;
  font-size: 26rpx;
  text-align: center;
  z-index: 101;
}
.bottom  .btTitle {
  background: #fff;
  width: 60%;
}
.bottom  .btTitle text {
  font-size: 30rpx;
  font-weight: bold;
}
.bottom .btnNext {
  width: 40%;
  color: #fff;
  background-color: #3979FD;
}
.content {
  display: flex;
  background-color: #fff;
}
.scrollBox {
  height: 100%;
  color: #fff;
}
.leftBox {
  width: 150rpx;
  flex: 1;
}
.rightBox {

}
.leftBox view{
  line-height: 100rpx;
  width: 150rpx;
  text-align: center;
  background-color: #DEDEDE;
  color: #333;
  font-size: 28rpx;
  box-sizing: border-box;
}
.leftBox view.active {
  background-color: #fff;
  color: #3979FD;
  border-left: 4px solid #3979FD;
}
.rightBox .typeName {
  line-height: 70rpx;
  padding: 0 20rpx;
  background-color: #F8F8F8;
  color: #9C9C9C;
  font-size: 22rpx;
  border-bottom: 1px solid #DEDEDE;
}

.main .btn{
  width: 120rpx;
  height: 52rpx;
  border-radius: 26rpx;
  /* background-color: #3979FD; */
  /* color: #fff; */
  text-align: center;
  line-height: 52rpx;
  font-size: 24rpx;
}
.main .uncheck {
  background-color: #DEDEDE;
  color: #3979FD;
}
.main .check {
  background-color: #3979FD;
  color: #fff;
}
.titleBox {
  justify-content: space-between;
}
.titleBox view {
  display: flex;
  align-items: center;
}
.titleBox, .major{
  height: 100rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #DEDEDE;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  display: flex;
  align-items: center;
}
.titleBox image { 
  margin-left: -6rpx;
  margin-right: 10rpx;
  width: 24rpx;
  height: 24rpx;
  transform: rotate(90deg);
  transition: all .5s;
}
.major {
  color: #9A9A9A;
  font-weight: normal;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx 0 50rpx;
  font-size: 26rpx;
}
.arrowBox {
  display: flex;
  align-items: center;
}
.arrow {
  width: 7rpx;
  height: 7rpx;
  background-color: #9A9A9A;
  margin-right: 8rpx;
}
.active image{
  transform: rotate(180deg);
  transition: all .5s;
}
.searhResults .major {
  padding-left: 30rpx;
}
.searchScroll {
  height: 100%; 
}

.hadCheckBox {
  background-color: rgba(0, 0, 0,.5);
  /* background-color: red; */
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.hadCheckBox .mainBox{
  width: 100%;
  height: 600rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  line-height: 100rpx;
}
.hadCheckBox .hadScroll {
  height: 500rpx;
}
.hadCheckBox .hadHeader {
  background-color:  #F4F4F5;
  font-size: 22rpx;
  color: #666;
  height: 100rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 100rpx;
}
.hadCheckBox .hadHeader .closeBox .close {
  display: flex;
  align-items: center;
}
.hadCheckBox .mainBox {
  background-color: #fff;
}
.hadCheckBox .arrowBox {
  align-items: center;
  color: #333;
}
.hadCheckBox .arrowBox .arrow {
  background-color: #333;
}
.hadCheckBox .major {
  padding: 0 30rpx;
  border-bottom: 1px solid #DEDEDE;
}
.hadCheckBox .major image {
  width: 21.6px;
  height: 24px;
}