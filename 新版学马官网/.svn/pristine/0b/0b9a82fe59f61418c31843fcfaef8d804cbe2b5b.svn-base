.qiangjizongping {
	.banner {
		img {
			display: block;
			width: 100%;
		}
	}
	.inner {
		width: 1200px;
		margin: 0 auto;
	}
	.big_title {
		font-size: 32px;
		text-align: center;
		line-height: 140px;
		font-weight: bold;
	}
	.service_object {
		padding-bottom: 60px;
	}
	.service_object .inner {
		height: 304px;
		display: flex;
		align-items: center;
		p {
			span {
				display: inline-block;
				width: 11px;
				height: 11px;
				margin-right: 10px;
				background-color: #333;
			}
			padding-right: 100px;
			font-size: 22px;
			line-height: 40px;
		}
	}
	.service_content {
		height: 688px;
		background: url(../imgs/qiangjizongping/bg_fuwuneirong.png) no-repeat center center;
		.lis {
			padding-top: 40px;
			display: flex;
			flex-wrap: wrap;
			align-items: space-between;
			height: 368px;
			// background-color: #fff;
			li.title_box {
				font-size: 18px;
				color: #fff;
				p {
					background-color: #297EF4;
					&:nth-child(3) {
						width: 766px;
						padding-left: 0;
						text-align: center;
					}
				}
			}
			li {
				width: 100%;
				line-height: 88px;
				text-align: center;
				color: #333;
				font-size: 16px;
				display: flex;
				justify-content: space-between;
				width: 1200px;
				height: 88px;
				&:last-child {
					border: none;
				}
				p {
					background-color: #D4E8FB;
					border-radius: 5px;
					&:nth-child(1) {
						width: 186px;
					}				
					&:nth-child(2) {
						width: 240px;
					}				
					&:nth-child(3) {
						width: 730px;
						padding-left: 36px;
						text-align: left;
					}
				}
			}
		}
	}
	.service_features {
		padding-bottom: 60px;
		.lis {
			line-height: 1.5;
			display: flex;
			justify-content: space-between;
			li {
				width: 315px;
				text-align: center;
				img {
					margin-bottom: 20px;
				}
				.title {
					font-size: 22px;
					font-weight: bold;
					margin-bottom: 10px;
				}
				.detail {
					font-size: 16px;
					color: #666;
				}
			}
		}
	}
}
