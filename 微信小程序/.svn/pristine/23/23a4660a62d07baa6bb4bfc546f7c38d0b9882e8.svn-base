/* pages/classroom/videoPlay/videoPlay.wxss */
video {
  width: 100%;
}
.header {
  display: flex;
  padding: 50rpx 30rpx;
  color: #9a9a9a;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 10rpx;
  background-color: #fff;
}
.header image {
  width: 226rpx;
  height: 170rpx;
  border-radius: 5rpx;
  margin-right: 30rpx;
}
.header .right {
  height: 170rpx;
  flex: 1;
  position: relative;
}
.header .smallTitle {
  color: #333;
  font-size: 28rpx;
  font-weight:bold;
  margin-bottom: 10rpx;
}
.header .btnLearn {
  width: 170rpx;
  height: 60rpx;
  border-radius: 30rpx;
  color: #fff;
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 24rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #3979FD;
}

.popupBox {
  width: 520rpx;
  height: 530rpx;
  background-color: rgba(0, 0, 0,.8);
  position: fixed;
  left: 50%;
  top: 50%;
  margin-left: -260rpx;
  margin-top: -265rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  border-radius: 10rpx;
  z-index: 10;
}
.popupBox .prpTitle icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
.popupBox .prpTitle {
  position: relative;
  line-height: 80rpx;
  color: #fff;
}
.popupBox image {
  width: 350rpx;
  height: 350rpx;
  margin: 0 auto;
  display: block;
  margin-bottom: 20rpx;
}
.btnDownload {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #3979FD;
  text-align: center;
  margin: 0 auto;
  border-radius: 10rpx;
  color: #fff;
  font-size: 30rpx;
}
.videoBox  {
  background-color: #fff;
  margin-bottom: 10rpx;
}
.videoBox .title {
  padding-left: 30rpx;
  line-height: 60rpx;
}

.main {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.main .title {
  border-left: 6rpx solid #3979FD;
  font-size: 34rpx;
  line-height: 34rpx;
  height: 34rpx;
  font-weight: 600;
  padding-left: 10rpx;
}
.main .titleBox {
  padding: 0 30rpx;
  display: flex;
  height: 90rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #dedede;
}
.tuijian {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 30rpx;
}
.tuijian .video {
  width: 210rpx;
  margin-bottom: 30rpx;
 
}
.tuijian .video image {
  width: 210rpx;
  height: 134rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}
.tuijian .video .videoTitle {
  font-size: 24rpx;
  color: #333;
}
.desc {
  padding: 20rpx 30rpx;
}
.fixBtn {
  position: fixed;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #3979FD;
  bottom: 0;
  left: 0;
  color: #fff;
}
.goLearn {
  line-height: 30px;
  padding-left: 10px;
  font-size: 14px;
  font-weight: bold;
  color: #333;
  background-color: #fff;
} 