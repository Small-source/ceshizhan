<!--pages/newSelectSubjects/newSelectSubjects.wxml-->
<view class="banner">
  <view class="province">{{province}}</view>
  <view class="btn" bindtap="goSelect">
    订制选科方案
  </view>
</view>
<view class="step">
  <view class="titleBox">
    <text class="title">新高考选科步骤</text>
  </view>
  <view class="main no1">
    <view>
      <view class="mainTitle">专业定位测评</view>
      <view class="mainDetail">五大维度  快速定位适合你的专业</view>
    </view>
    <view class="btn active" wx:if="{{code==1||code==2}}" bindtap="goSelect">定位测评</view>
    <view class="btn unactive" wx:else>定位测评</view>
  </view>
  <view class="main no2">
    <view>
      <view class="mainTitle">选择目标专业</view>
      <view class="mainDetail">专业库  海量数据支持选科</view>
    </view>
    <view class="btn active" wx:if="{{code==3}}" bindtap="goSelect">选择专业</view>
    <view class="btn unactive" wx:else>选择专业</view>
  </view>
    <view class="main no3">
    <view>
      <view class="mainTitle">生成选科方案</view>
      <view class="mainDetail">一键生成  选科结果大数据分析生成</view>
    </view>
    <view class="btn active" wx:if="{{code==4}}" bindtap="goSelect">生成方案</view>
    <view class="btn unactive" wx:else>生成方案</view>
  </view>
</view>
<view class="chaxun">
  <view class="titleBox">
    <text class="title">选科查询</text>
  </view>
  <view class="mainBox">
    <navigator class="main" url="/pages/selectSubjects/selectSubjects?city={{province}}&daxueFlag=true" hover-class="none">
      <image src="https://m.xuematech.com/applet/img/newSelectSubjects/icon_daxuezhuanyexuanke.png"></image>
      <view>
        <text>大学专业</text>
        <text>选科要求</text>
      </view>
    </navigator>
    <navigator class="main" url="/pages/selectSubjects/selectSubjects?city={{province}}&daxueFlag=" hover-class="none">
      <image src="https://m.xuematech.com/applet/img/newSelectSubjects/icon_xuankezuhe.png"></image>
      <view class="mainDetail">
        <text>选科组合</text>
        <text>可报专业</text>
      </view>
    </navigator>
  </view>
</view>
<view class="liucheng">
  <view class="header">
    <view class="headerText" wx:if="{{isShowUrl}}">
      <text>更多信息</text>
      <text>请查看pc版新高考选科</text>
    </view>
    <view class="headerText pcUrl" wx:else>
      <text selectable='true'>{{pcUrl}}</text>
    </view>
    <view class="btn" bindtap="changeIsShow"></view>
  </view>
  <view class="main" wx:for="{{pcDetail}}" wx:key="idnex" style="background: url({{item.imgUrl}});background-size: 100% 100%;">
    <view class="mainTitle">{{item.title}}</view>
    <view class="detail">{{item.detail}}</view>
  </view>
</view>
<view class="fenlei">
  <view class="main" wx:for="{{fenlei}}" wx:key="idnex">
    <view class="mainTitle">{{item.title}}</view>
    <view wx:for="{{item.detail}}" wx:key="key" wx:for-item="child" class="child">{{child}}</view>
  </view>
</view>