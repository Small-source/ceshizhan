/* 提示层 */
.layer {
  min-width: 150px;
  position: fixed;
  height: 45px;
  color: #fff;
  background: rgba(0, 0, 0, .7);
  padding: 0 20px;
  text-align: center;
  line-height: 45px;
  left: 50%;
  top: 50%;
  margin-top: -25px;
  border-radius: 4px;
  z-index: 100000000000;
  /*display: none;*/
}





