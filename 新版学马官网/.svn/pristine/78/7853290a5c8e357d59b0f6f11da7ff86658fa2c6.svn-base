.part1{
   width: 100%;
   height: 480px;
   background: url("../imgs/xuezhi/banner.png") center bottom no-repeat;;
}
.parts{
  width: 1200px;
  margin: 0 auto;
}
.title{
  font-size: 34px;
  font-weight: bolder;
  text-align: center;
  padding: 50px 0;
}
.part2{
  width: 100%;
  height: 679px;
  background: url("../imgs/xuezhi/icon_jiejuewenti.png") center center;
  .main{
    width: 1266px;
    height: 546px;
    background: url("../imgs/xuezhi/bg.png") center center no-repeat;
    overflow: hidden;
    margin-left: -33px;
    .list{
      display: flex;
      justify-content: space-between;
      width: 1106px;
      height: 390px;
      margin: 71px auto 0;
      position: relative;
      left:-6px;
      li{
        width: 262px;
        height: 390px;
        background: url("../imgs/shipin/icon_weidianji.png") center center no-repeat;
        &:hover{
          background: url("../imgs/shipin/icon_dianjihou.png") center center no-repeat;
        }
        img{
          display: block;
          margin: 40px auto;
        }
        p{
          text-align: center;
          *{
            color:#fff;
          }
          .span1{
            font-size: 16px;
          }
          .span2{
            font-size: 20px;
            line-height: 36px;
          }
        }
      }
    }
  }
}
.part3{
  height: 585px;
  width: 100%;
  background: url("../imgs/shipin/bg_chanpinyoushi.png") center center no-repeat;
  .clist{
    width: 990px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    li{
      width: 190px;
      padding-top: 30px;
      img{
        display: block;
        margin:0 auto;
      }
      p{
        font-size: 17px;
        color:#fff;
        line-height: 32px;
        text-align: center;
        font-weight: bold;
        padding-top: 38px;
      }
    }
  }
}
.part4{
  .list{
    li{
      overflow: hidden;
      padding-bottom: 100px;
      .text{
        position: relative;
        top:180px;

        img{
          position: absolute;
          left:-50px;
          top:10px;
        }
        p{
          font-size: 26px;
          font-weight: bold;
          margin-bottom: 14px;
        }
        span{
          font-size: 16px;
          color:#9A9A9A;
          line-height: 34px;
          position: relative;
          margin-left: 20px;
          display: block;
        }
        .circle{
          width:6px;
          height:6px;
          border-radius: 50%;
          background:#8A8A8A;
          top:14px;
          left:-14px;
          position: absolute;
        }
      }
    }
  }
}
