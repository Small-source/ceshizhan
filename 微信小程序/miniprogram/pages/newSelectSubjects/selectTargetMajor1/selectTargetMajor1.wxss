/* pages/selectTargetMajor/selectTargetMajor.wxss */
.header {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}
.header image {
  width: 119rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}
.header view {
  font-size: 24rpx;
}
.main {
  margin-bottom: 10rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 100rpx;
  background-color: #fff;
}
.main .majorName {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}
.main .btn{
  width: 120rpx;
  height: 52rpx;
  border-radius: 26rpx;
  /* background-color: #3979FD; */
  /* color: #fff; */
  text-align: center;
  line-height: 52rpx;
  font-size: 24rpx;
}
.main .uncheck {
  background-color: #DEDEDE;
  color: #3979FD;
}
.main .check {
  background-color: #3979FD;
  color: #fff;
}
.bottom {
  display: flex;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow: 0rpx 0rpx 10rpx #dedede;
  height: 50px;
  line-height: 50px;
  font-size: 26rpx;
  text-align: center;
  z-index: 101;
}
.bottom  .btTitle {
  background: #fff;
  width: 450rpx;
}
.bottom  .btTitle text {
  font-size: 30rpx;
  font-weight: bold;
}
.bottom .btnNext {
  width: 300rpx;
  color: #fff;
  background-color: #3979FD;
}
.hadCheckBox {
  background-color: rgba(0, 0, 0,.5);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.hadCheckBox .mainBox{
  width: 100%;
  height: 600rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  line-height: 100rpx;
}
.hadCheckBox .hadScroll {
  height: 500rpx;
}
.hadCheckBox .hadHeader {
  background-color:  #F4F4F5;
  font-size: 22rpx;
  color: #666;
  height: 100rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 100rpx;
}
.hadCheckBox .hadHeader .closeBox .close {
  display: flex;
  align-items: center;
}
.hadCheckBox .mainBox {
  background-color: #fff;
}
.hadCheckBox .arrowBox {
  align-items: center;
  color: #333;
}
.hadCheckBox .arrowBox .arrow {
  background-color: #333;
}
.hadCheckBox .major {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  border-bottom: 1px solid #DEDEDE;
}
.hadCheckBox .major image {
  width: 21.6px;
  height: 24px;
}