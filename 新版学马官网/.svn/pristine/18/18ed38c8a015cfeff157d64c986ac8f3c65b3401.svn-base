.parts {
  width: 1200px;
  margin: 0 auto;
}
.part1 {
  width: 100%;
  height: 420px;
  background: url("../imgs/xuezhi/banner.png") center center;
}
.part2 {
  width: 100%;
  height: 679px;
  background: url("../imgs/xuezhi/icon_jiejuewenti.png") center center;
}
.part2 .main {
  width: 1266px;
  height: 546px;
  background: url("../imgs/xuezhi/bg.png") center center no-repeat;
  overflow: hidden;
}
.part2 .main .list {
  display: flex;
  justify-content: space-between;
  width: 1106px;
  height: 390px;
  margin: 71px auto 0;
  position: relative;
  left: -6px;
}
.part2 .main .list li {
  width: 341px;
  height: 390px;
  background: url("../imgs/xuezhi/icon_weidianji.png") center center no-repeat;
}
.part2 .main .list li:hover {
  background: url("../imgs/xuezhi/icon_dianji.png") center center no-repeat;
}
.part2 .main .list li img {
  display: block;
  margin: 40px auto;
}
.part2 .main .list li p {
  text-align: center;
}
.part2 .main .list li p * {
  color: #fff;
}
.part2 .main .list li p .span1 {
  font-size: 16px;
}
.part2 .main .list li p .span2 {
  font-size: 20px;
  line-height: 36px;
}
.title {
  font-size: 34px;
  font-weight: bolder;
  text-align: center;
  padding: 50px 0;
}
.part3 {
  padding-bottom: 50px;
}
.part3 .main {
  width: 100%;
  height: 690px;
  background: url("../imgs/xuezhi/chanpinyoushi.png") center bottom no-repeat;
  position: relative;
}
.part3 .main .text {
  width: 300px;
  height: 86px;
  position: absolute;
  border-radius: 15px;
  box-shadow: 0 0 10px 1px #E3E3E3;
  text-align: center;
  padding-top: 12px;
}
.part3 .main .text1 {
  left: 50%;
  top: 0;
  margin-left: -150px;
  line-height: 64px;
}
.part3 .main .text2 {
  left: 0;
  top: 246px;
  line-height: 30px;
}
.part3 .main .text3 {
  right: 0;
  top: 246px;
  line-height: 30px;
}
.part3 .main .icon {
  position: absolute;
  top: 0;
}
.part3 .main .icon1 {
  left: 244px;
  top: 340px;
}
.part3 .main .icon2 {
  left: 50%;
  top: 90px;
  margin-left: -56px;
}
.part3 .main .icon3 {
  right: 244px;
  top: 340px;
}
.part3 .main .bottom {
  width: 100%;
  height: 38px;
  text-align: center;
  font-size: 14px;
  color: #8A8A8A;
  position: absolute;
  left: 0;
}
.part3 .main .bottom span {
  font-size: 20px;
  color: #2A74FE;
}
.part3 .main .bottom1 {
  bottom: 46px;
}
.part3 .main .bottom2 {
  bottom: 4px;
}
.part4 {
  width: 100%;
  height: 629px;
  background: url("../imgs/xuezhi/chanpinyoushi.png") center bottom no-repeat;
}
