<script>
    $(function () {
        var flag = false ;
        $('.lis_no2').mouseenter(function () {
            flag = true
            $('.nextNavs').show()
            $('.arrow').css('transform','rotate(180deg)')
        })
        $('.lis_no2').mouseleave(function () {
            flag = false
            setInterval(function () {
                if(!flag){
                    // $('.nextNavs').fadeOut()
                    $('.nextNavs').hide()
                    $('.arrow').css('transform','')
                }
            },500)
        })
        var before = $('body,html').scrollTop()
        $(window).on('scroll',function () {
            var after = $('body,html').scrollTop()
            if(after<76){
                $('header').show()
                return ;
            }
            if(after>before){
                $('header').hide()
            }else{
                $('header').show()
            }
            before = after;
        })
    })
</script>
