/* pages/consultant/consultant.wxss */
.consultant-list {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}
.consultant-list .title {
  padding: 30rpx 20rpx;
  line-height: 30rpx;
  border-bottom: 1px solid #E5E5E5;
}
.consultant-list .title text {
  padding-left: 12rpx;
  display: inlne-block;
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: bold;
  color: #333;
  border-left: 6rpx solid #3669F8;
}
.consultant-list .title navigator {
  float: right;
  font-size: 24rpx;
  color: #666;
}
.consultant-list .list {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #F5F5F5;
  /* overflow: hidden; */
  display: flex;
  align-items: center;
  
}
.consultant-list .list .right .top{
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.consultant-list .list image{
  width: 117rpx;
  height: 117rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  /* float: left; */
}
.consultant-list .list .right .top-title {
  float: left;
}
.consultant-list .list .right .top .work {
  float: left;
  color: #ec6c06;
  font-size: 24rpx;
}
.consultant-list .list .right .top .work image{
  width:28rpx;
  height:23rpx;
  border-radius: 0;
  margin-right: 0;
  margin-left: 30rpx;
}

.consultant-list .list .right .bottom{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding-top: 10rpx;
}
.consultant-list .list .right .bottom view{
  font-size: 24rpx;
  color: #666;
  padding: 0 15rpx;
  margin-right:15rpx; 
  line-height: 38rpx;
  /* display: flex;
  align-items: center; */
  height: 38rpx;
  border-radius: 20rpx;
  border: 1px solid #3979FD;
  margin-top: 10rpx;
}