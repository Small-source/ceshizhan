.news_detail {
  background-color: #fff;
}
.news_detail .inner {
  width: 1200px;
  margin: 0 auto;
}
.news_detail .top_nav {
  padding-top: 7px;
}
.news_detail .top_nav .inner {
  height: 56px;
  line-height: 56px;
  font-size: 18px;
  color: #333;
  font-weight: 600;
  border-bottom: 1px solid #2c8ffc;
}
.news_detail .top_nav .inner span {
  cursor: pointer;
}
.news_detail .top_nav .inner span:hover {
  color: #127de1;
}
.news_detail .top_nav .nav_title {
  color: #127de1;
}
.news_detail .content .h5_title {
  line-height: 76px;
  font-size: 24px;
  font-weight: bold;
  color: #333;
  text-align: center;
}
.news_detail .loading {
  width: 100%;
  height: 600px;
}
