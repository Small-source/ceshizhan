<script src="./js/ajax.js"></script>
<script>
	let data = 1;
	function changeCard(value) {
		let _this = this;
		let element = document.getElementById("fixed_card");
		if(value) {
			element.style.display="block";
		}else {
			element.style.display="none";
			_this.goSlide(2)
		}
	}
	// 加盟咨询
	function goSubmit() {  
		// console.log(5555)
		let _this = this;
	    let name = document.getElementById("join_name").value;
	    let phone = document.getElementById("join_phone").value;
	    let join_remind = document.getElementById("join_remind");
	    let data =  "name=" + name + "&phone=" + phone + "&type=4&message=''";
	    let reg = /(^1[34578]\d{9}$)|(^\d{8}$)/;
	    if(!name && !phone) {
	        join_remind.innerHTML = '姓名或手机号不能为空';
	        return;
	    }else if(!reg.test(phone)) {
	        join_remind.innerHTML = '手机号格式不正确';
	        return;   
	    }
	    ajax.post("http://www.xuematech.com/papi/merchant/storeConsultation", data, function(data) {
	        console.log(data);
	        if(data.code === 2000) {
	            join_remind.innerHTML = '申请成功';
	            setTimeout(function() {
	    			document.getElementById("join_name").value = '';
	    			document.getElementById("join_phone").value = '';
	    			join_remind.innerHTML = '';
	            	_this.changeCard(false)
	            },1000)
	        }else {
	        	join_remind.innerHTML = data.msg;
	        }
	    })
	}
	function goSlide(value) {
		let input =document.getElementById("join_name");
		let input2 =document.getElementById("join_phone");
		data = value;
		setTimeout(function() {
			// console.log(data)
			if(data == 2) {
				input.blur();
				input2.blur();
				window.scroll(0,0);
			}
		},0)
	}
</script>
