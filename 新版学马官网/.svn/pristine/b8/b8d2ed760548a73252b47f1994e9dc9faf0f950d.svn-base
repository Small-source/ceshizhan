<script>
    $(function () {
        var canvasElement = document.getElementById("canvas");
        var flag=true
        function draw(canvas){
            // 判断canvas节点是否具有getContext方法, 如果没有, 则说明浏览器不支持canvas
            if (!canvas.getContext){
                return
            }
            var ctx = canvas.getContext("2d");
            var number = 1
            var start = -0.8
            var t=null
            function animate(){
                number++;
                ctx.clearRect(0,0,canvas.width,canvas.height)
                ctx.beginPath();
                ctx.arc(canvas.width/2,canvas.height/2,263,-0.8*Math.PI,(-0.8+number*0.01)*Math.PI,false);
                ctx.lineCap='round'
                ctx.lineWidth='50'
                ctx.strokeStyle='#216CEC'
                ctx.stroke();
                if((-0.8+number*0.01)>1.2){
                    clearInterval(t);
                    t=null;
                }
            }
             t = setInterval(animate,10)
        }
        var scTop=$('.part3').offset().top;
        $(window).on('scroll',function () {
            if($('body,html').scrollTop()+100>=scTop){
                if(flag){
                    draw(canvasElement)
                    flag = false;
                }
            }
        })
    })
</script>
