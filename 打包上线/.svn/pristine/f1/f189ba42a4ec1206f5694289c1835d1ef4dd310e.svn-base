* {
	box-sizing: border-box;
}
html, body {
	color: #333;
    width:100%;
    height:100%;
	display: flex;	
    display: -webkit-flex;
    flex-direction:column;
    position: relative;
}
.investment {
	flex: 1;
	overflow: auto;
  	-webkit-overflow-scrolling: touch;
	.logo_box {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0 0.3rem;
		height: 1.2rem;
		font-size: 0.24rem;
		img {
			display: block;
			width: 1.6rem;
		}
	}
	.big_title {
		padding-left: 0.3rem;
		color: #fff;
		font-size: 0.36rem;
		font-weight: bold;
	}
	.small_title {
		height: 0.34rem;
		display: flex;
		align-items: center;
		font-size: 0.32rem;
		font-weight: bold;
		color: #E72630;
		img {
			width: 0.39rem;
			height: 0.33rem;
			margin-right: 0.1rem;
		}
	}
	.banner {
		width: 7.5rem;
		height: 5.82rem;
		img {
			width: 100%;
			height: 100%;
		}
	}
	.service_products {
		padding: 1.10rem 0.3rem 0.5rem 0.3rem;
		background-color: #fff;
		position: relative;
		.big_title {
			position: absolute;
			top: 0.44rem;
			left: 0.3rem;
			width: 3.77rem;
			height: 0.79rem;
			line-height: 0.79rem;
			background: url(../imgs/investment/icon_fuwuyuchanpintixi.png) no-repeat;
			background-size: 100% 100%;
			
		}
		.content {
			padding: 0 0.3rem;
			background-color: #FFEEEE;
			border-radius: 0.2rem;
			.main_box {
				padding-top: 0.55rem;
				border-bottom: 1px dashed #F3969B;
				&:last-child {
					border: none;
				}
				.small_title {
					margin-bottom: 0.3rem;
				}
				.lis_service {
					display: flex;
					flex-wrap: wrap;
					justify-content: space-between;
					text-align: center;
					li {
						width: 1.2rem;
						line-height: 1.5;
						font-size: 0.22rem;
						margin-bottom: 0.35rem;
						img {
							width: 0.8rem;
							height: 0.8rem;
							margin-bottom: 0.1rem;
						}
					}
				}
				.lis_products {
					padding-bottom: 0.55rem;
					display: flex;
					justify-content: space-between;
					li {
						width: 2.03rem;
						height: 2.23rem;
						padding-top: 1.7rem;
						font-size: 0.2rem;
						text-align:center;
						&:nth-child(1) {
							background: url(../imgs/investment/icon_xuemashengya.png) no-repeat;
							background-size: 100% 100%;
						}
						&:nth-child(2) {
							background: url(../imgs/investment/icon_shengyafazhanguanlipingtai.png) no-repeat;
							background-size: 100% 100%;
						}
						&:nth-child(3) {
							background: url(../imgs/investment/icon_xiaochengxu.png) no-repeat;
							background-size: 100% 100%;
						}
					}
				}
				.lis_tools {
					display: flex;
					flex-wrap: wrap;
					justify-content: space-between;
					padding-bottom: 0.1rem;
					li {
						margin-bottom: 0.3rem;
						width: 2rem;
						height: 0.5rem;
						line-height: 0.5rem;
						border-radius: 0.25rem;
						border: 1px solid #FF5056;
						font-size: 0.2rem;
						text-align: center;
						&:last-child {
							border: none;
						}
					}
				}
			}
		}
	}
	.business {
		padding: 1.3rem 0.3rem 0.5rem 0.3rem;
		background: linear-gradient(to right, #EA4E61, #E72532);
		position: relative;
		.big_title {
			position: absolute;
			top: 0.55rem;
			left: 0.3rem;
			width: 4.9rem;
			height: 0.9rem;
			line-height: 0.79rem;
			background: url(../imgs/investment/icon_xinyewu.png) no-repeat;
			background-size: 100% 100%;
		}
		.content {
			padding: 0 0.3rem;
			padding-bottom: 0.3rem;
			background-color: #FFEEEE;
			border-radius: 0.2rem;
			.small_title {
				margin-bottom: 0.35rem;
			}
			.main_box {
				padding-top: 0.6rem;
				ul {
					li {
						display: flex;
						justify-content: space-between;
						align-items: center;
						height: 2.48rem;
						font-size: 0.28rem;
						margin-bottom: 0.25rem;
						&:last-child {
							margin-bottom: 0;
						}
						p {
							position: relative;
							padding-left: 0.3rem;
							&:before {
								content: '';
								position: absolute;
								left: 0;
								top: 50%;
								width: 0.12rem;
								height: 0.12rem;
								border-radius: 0.02rem;
								margin-top: -0.06rem;
								background-color: #E8394A;
							}
						}
						img {
							width: 4.21rem;
							height: 2.48rem
						}
					}
				}
			}
		}
	}
	.xuema_advantage {
		padding: 1.10rem 0.3rem 0.4rem 0.3rem;
		background-color: #fff;
		position: relative;
		.big_title {
			position: absolute;
			top: 0.44rem;
			left: 0.3rem;
			width: 2.77rem;
			height: 0.79rem;
			line-height: 0.79rem;
			background: url(../imgs/investment/icon_xuemayoushi.png) no-repeat;
			background-size: 100% 100%;
		}
		.content {
			background-color: #FFEEEE;
			padding: 0 0.3rem;
			ul {
				li {
					padding: 0.5rem 0 0.3rem;
					display: flex;
					justify-content: space-between;
					border-bottom: 1px dashed #F3969B;
					&:last-child {
						border: none;
					}
					.left {
						padding-right: 0.4rem;
						img {
							width: 0.85rem;
							height: 0.70rem;
						}
					}
					.right {
						flex: 1;
						.title {
							font-size: 0.32rem;
							line-height: 1;
							color: #E72630;
							font-weight: bold;
							margin-bottom: 0.2rem;
						}
						.detail {
							font-size: 0.22rem;
						}
					}
				}
			}

		}
	}
}
.fixed_box {
	// position: fixed;
	// left: 0;
	// bottom: 0;
	// width: 100%;
	height: 1.15rem;
	.btn_box {
		width: 50%;
		display: block;
		text-align: center;
		color: #fff;
		font-size: 0.32rem;
		height: 1.15rem;
		line-height: 1.15rem;
		float: left;
		&>div {
			display: flex;
			align-items: center;
			justify-content: center;
		}
		img {
			display: block;
			width: 0.57rem;
			height: 0.7rem;
			margin-right: 0.2rem;
		}
	}
	.phone {
		background-color: #FEB524;

	}
	.reservation {
		background-color: #FF7200;
		img {
			width: 0.66rem;
			height: 0.71rem;
		}
	}
}
.fixed_card {
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 10;
	display: none;
	background: rgba(0,0,0,.7);
	.card {
		position: absolute;
		left: 50%;
		top: 50%;
		margin-left: -3.05rem;
		margin-top: -2.15rem;
		width: 6.1rem;
		height: 4.3rem;
		padding: 0.5rem 0.3rem 0.4rem 0.3rem;
		background-color: #fff;
		border-radius: 0.3rem;
		ul {
			// padding-bottom: 0.3rem;
			li {
				line-height: 0.8rem;
				margin-bottom: 0.35rem;
				display: flex;
				&:last-child {
					margin-bottom: 0;
				}
				span {
					color: #333;
					font-size: 0.28rem;

				}
				input {
					flex: 1;
					border-radius: 0.4rem;
					padding-left: 0.3rem;
					border: 1px solid #9F9F9F;
				}
			}
		}
		.remind {
			line-height: 0.65rem;
			height: 0.65rem;
			color: #EC5F5C;
			font-size: 0.28rem;
			text-align: center;
		}
		.btn_submit {
			width: 2.56rem;
			height: 0.8rem;
			line-height: 0.8rem;
			border-radius: 0.4rem;
			color: #fff;
			text-align: center;
			font-size: 0.32rem;
			margin: 0 auto;
			background: linear-gradient(to bottom, #EF835E , #EC5E5C);
		}
		.btn_close {
			position: absolute;
			right: 0;
			top: -0.6rem;
			width: 0.44rem;
			height: 0.44rem;
			img {
				display: block;
				width: 100%;
				height: 100%;
			}
		}

	}
}