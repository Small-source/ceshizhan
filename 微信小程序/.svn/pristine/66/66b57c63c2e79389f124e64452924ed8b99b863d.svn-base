/* pages/classroom/columnlist/columnlist.wxss */
.content {
  padding:0 30rpx;
  background-color: #fff;
}
.mainBox {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid #e5e5e5;
  color: #9a9a9a;
  font-size: 24rpx;
  width: 100%;
}
.mainBox:last-child {
  border: none;
}
.mainBox image {
  width: 226rpx;
  height: 170rpx;
  border-radius: 5rpx;
  margin-right: 30rpx;
}
.mainBox .right {
  flex: 1;
}
.mainBox .smallTitle {
  color: #333;
  font-size: 28rpx;
}
.mainBox .smallTitle {
  color: #333;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.mainBox .detail {
  line-height: 40rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  overflow: hidden;  /** 隐藏超出的内容 **/
  word-break: break-all;
  text-overflow: ellipsis; /** 多行 **/
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
}
.mainBox .time {
  display: flex;
  align-items: center;
}
.mainBox .time image {
  width: 25rpx;
  height: 25rpx;
  margin-right: 5rpx;
}