/* miniprogram/pages/learningAssessment/learningAssessments.wxss */
.main{
  padding: 40rpx;
}
.main>view{
     height: 140rpx;
     border-radius:10rpx;
     padding:0 30rpx;
     margin-bottom: 40rpx;
     border: 1rpx solid #dedede;
}
.img_box{
     float: left;
     width: 80rpx;
     height: 80rpx;
     margin-top: 10rpx;
     padding: 30rpx  0;
}
.img_box image{
    width: 100%;
    height: 100%;
}
.p{
     line-height: 140rpx;
     font-size:34rpx;
     color: #333;
     font-weight: 600;
     float: left;
     padding-left: 20rpx;
     margin: 0;
}
.btn_box{
    width: 152rpx;
    height: 140rpx;
    float: right;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}
.btn{
    display: block;
     width: 150rpx;
     height: 55rpx;
     line-height: 60rpx;
     text-align: center;
     border-radius: 6rpx;
     background-color: #358ced;
     color: #fff;
     font-size: 26rpx;
     float: right;
     cursor: pointer;
}