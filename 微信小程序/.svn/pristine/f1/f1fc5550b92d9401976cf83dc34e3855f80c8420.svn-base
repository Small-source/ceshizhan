/* pages/selectTargetMajor/generateSubjectPlan.wxss */
.bottom {
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
  text-align: center;
  color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  font-size: 26rpx;
  font-weight: 600;
  background-color: #3979FD;
}
.header {
  padding: 0 30rpx;
  line-height: 72rpx;
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #3979FC;
}

.flexBox {
  display: flex;
}
.flexBox view:nth-child(1) {
  width: 260rpx;
  text-align: left;
}
.flexBox view:nth-child(2) {
  width: 135rpx;
  text-align: center;
}
.flexBox view:nth-child(3) {
  width: 135rpx;
  text-align: center;
}
.flexBox view:nth-child(4) {
  width: 160rpx;
  text-align: center;
}
.content {
  padding: 0 30rpx;
  padding-bottom: 100rpx;
}
.main {
  box-sizing: border-box;
  width: 100%;
  min-height: 100rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  margin-bottom: 10rpx;
  border: 1px solid #fff;
}
.main view:nth-child(1) {
  font-size: 24rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
} 
.active {
  border: 1px solid #3979FC;
}