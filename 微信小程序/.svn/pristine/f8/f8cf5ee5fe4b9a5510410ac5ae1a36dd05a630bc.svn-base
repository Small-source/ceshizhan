/* miniprogram/pages/login/perfectInformation.wxss */
@import  "../public/public.wxss";
  #waring{
        color:red;
        line-height: 80rpx;
        height: 80rpx;
        text-align: center;
        font-size: 24rpx;
    }
    #bindPhone{
        width: 750rpx;
        margin: 0 auto;
    }
    .head{
        height: 536rpx;
        width: 750rpx;
        background-image:url("https://m.xuematech.com/applet/img/login/bg.png");
        background-size:100% 100%;
    }
    .denglu{
        width: 700rpx;
        height: 712rpx;
        margin: 0 auto;
        background: #fff;
        border-radius: 10rpx;
        box-shadow: 0 4rpx 4rpx #f6f6f6;
        position: relative;
        top:-140rpx;
        padding: 0 50rpx;
    }
    .title{
        font-size: 36rpx;
        text-align: center;
        color:#3076EC;
        font-weight: bolder;
        padding: 50rpx 0 0;
    }
    .inputs{
        height:56rpx;
        width: 100%;
        line-height: 56rpx;
        margin-top: 42rpx;
    }
    .inputLeft{
        float: left;
        width: 152rpx;
        height: 100%;
        font-size: 26rpx;
        line-height: 56rpx;
        font-weight: bold;
        color: #333;
    }
    .inputLeft a{
        font-size: 26rpx;
        line-height: 56rpx;
        font-weight: bold;
        color: #333;
        opacity: 0;
    }
    .inputRight{
        float: right;
        width: 436rpx;
        height: 100%;
        line-height: 56rpx;
    }
    .inputLeft>text{
        color: red;
        margin-right: 16rpx;
        font-size: 32rpx;
        line-height: 56rpx;
        position: relative;
        top:6rpx;
    }
    .submit{
        width: 420rpx;
        line-height: 76rpx;
        border-radius: 38rpx;
        text-align: center;
        font-size: 32rpx;
        color: white;
        background:#3076EC;
        margin: 0 auto;

    }
    select{
        display: inline-block;
        width: 132rpx;
        line-height: 56rpx;
        border-radius: 10rpx;
        border-color:#D0DFFE;
        outline: none;
        font-size: 24rpx;
        height: 56rpx;
    }
    option{
        font-size: 24rpx;
    }
    input[type=text]{
        width: 100%;
        height: 100%;
        border-radius: 6rpx;
        outline: none;
        border:1px solid #D0DFFE;
        font-size: 24rpx;
        text-indent: 10rpx;
        padding-left: 10rpx;
    }
    #liandong{
        display: flex;
        justify-content: space-between;
    }
    .inputRight>text{
        font-size: 24rpx;
    }
    input[type=radio]{
        position: relative;
        top:4rpx;
    }
    .picker{
       border:1px solid #D0DFFE;
       font-size: 24rpx;
       padding: 0 10rpx;
    }
    .garde{
      min-width: 80rpx;
      max-width: 140rpx;
      display: inline-block;
      margin-right: 20rpx;
      white-space:nowrap; 
      text-overflow:ellipsis;
      overflow:hidden; 
    }
    .sex{
      font-size: 36rpx;
      position: relative;
      top:6rpx;
    }
    radio {
      transform:scale(0.8);
      position: relative;
      top:-6rpx;
    }
    .diqu{
       display: flex;
       justify-content: space-between;
    }
    .diqu .picker{
      display: inline-block
    }
    #garde{
      position: relative;
      top:-20rpx;
    }