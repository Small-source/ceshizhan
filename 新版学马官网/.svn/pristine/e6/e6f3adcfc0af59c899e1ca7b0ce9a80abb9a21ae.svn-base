.parts{
  width: 1200px;
  margin: 0 auto;
}
.part1{
  width: 100%;
  height: 420px;
  background: url("../imgs/xuezhi/banner.png") center center;
}
.part2{
  width: 100%;
  height: 679px;
  background: url("../imgs/xuezhi/icon_jiejuewenti.png") center center;
  .main{
    width: 1266px;
    height: 546px;
    background: url("../imgs/xuezhi/bg.png") center center no-repeat;
    overflow: hidden;
    .list{
      display: flex;
      justify-content: space-between;
      width: 1106px;
      height: 390px;
      margin: 71px auto 0;
      position: relative;
      left:-6px;
      li{
        width: 341px;
        height: 390px;
        background: url("../imgs/xuezhi/icon_weidianji.png") center center no-repeat;
        &:hover{
          background: url("../imgs/xuezhi/icon_dianji.png") center center no-repeat;
        }
        img{
          display: block;
          margin: 40px auto;
        }
        p{
          text-align: center;
          *{
            color:#fff;
          }
          .span1{
            font-size: 16px;
          }
          .span2{
            font-size: 20px;
            line-height: 36px;
          }
        }
      }
    }
  }
}
.title{
  font-size: 34px;
  font-weight: bolder;
  text-align: center;
  padding: 50px 0;
}
.part3{
  .main{
    width: 100%;
    height: 690px;
    background: url("../imgs/xuezhi/chanpinyoushi.png") center bottom no-repeat;
    position: relative;
    .text{
      width: 300px;
      height: 86px;
      position: absolute;
      border-radius: 15px;
      box-shadow:0 0 10px 1px #E3E3E3;
      text-align: center;
      padding-top:12px;
    }
    .text1{
      left: 50%;
      top: 0;
      margin-left: -150px;
      line-height: 64px;
    }
    .text2{
      left:0;
      top:246px;
      line-height:30px;
    }
    .text3{
      right:0;
      top:246px;
      line-height:30px;
    }
    .icon{
      position: absolute;
      top: 0;
    }
    .icon1{
      left: 244px;
      top:340px;
    }
    .icon2{
      left:50%;
      top:90px;
      margin-left: -56px;
    }
    .icon3{
      right:244px;
      top:340px;
    }
    .bottom{
      width: 100%;
      height: 38px;
      text-align: center;
      font-size: 14px;
      color:#8A8A8A;
      position: absolute;
      left:0;
      span{
        font-size: 20px;
        color:#2A74FE;
      }
    }
    .bottom1{
      bottom:46px;
    }
    .bottom2{
      bottom:4px;
    }
  }
  padding-bottom: 50px;
}
.part4{
  width: 100%;
  height: 629px;
  background: url("../imgs/xuezhi/chanpinyoushi.png") center bottom no-repeat;
}
