.school_solution {
    font-size:16px; 
    .inner {
        box-sizing: border-box;
        width: 1200px;
        margin: 0 auto;
    }
    .big_title {
        height: 140px;
        line-height: 140px;
        font-size: 32px;
        font-weight: bold;
        color: #333;
        text-align: center;
    }
    .banner {
        img {
            width: 100%;
        }
    }
    .service_program {
        padding-bottom: 70px;
        background-color: #F5F9FC;
        .lis {
            display: flex;
            justify-content: space-between;
            li {
                width: 278px;
                height: 364px;
                padding: 28px;
                text-align: center;
                box-sizing: border-box;
                background-color: #fff;
                box-shadow: 0 0 10px #dedede;
                .title {
                    font-size: 22px;
                    font-weight: bold;
                    line-height: 66px;
                }
                .detail {
                    font-size: 13px;
                    color: #666;
                    line-height: 30px;
                }
            }
        }
    }
    .teacher_training {
        padding-bottom: 70px;
        .inner {
            height: 439px;
            padding-left: 628px;
            background: url(../imgs/school_solution/tixi.png) no-repeat;
            ul {
                padding-top: 50px;
                li {
                    height: 46px;
                    display: flex;
                    flex-wrap: wrap;
                    align-items: space-between;
                    margin-bottom: 86px;
                }
            }
        }
    }
    .course {
        box-sizing: border-box;
        background: url(../imgs/school_solution/bg_shengyakechengjianshe.png) no-repeat center center;
        height: 585px;
        padding-bottom: 70px;
        color: #fff;
        .big_title {
            color: #fff;
        }
        .inner {
            ul {
                padding-top: 50px;
                display: flex;
                justify-content: space-between;
                li {    
                    width: 400px;
                    text-align: center;
                    img {
                        margin-bottom: 30px;
                    }
                    p {
                        line-height: 30px;
                    }
                }
            }
        }
    }
    .platform {
        padding-bottom: 55px;
        background-color: #FFFFFF;
        .inner {
            box-sizing: border-box;
            position: relative;
            background: url(../imgs/school_solution/icon_shengyapingtaijianshe.png) no-repeat center center;
            height: 585px;
            padding-top: 180px;
            ul {
                li {
                    position: absolute;
                    line-height: 80px; 
                    width: 230px;
                    line-height: 80px;
                    text-align: center; 
                }
                .no1 {
                    left: 120px;
                    top: 30px;
                }
                .no2 {
                    left: 850px;
                    top: 30px;
                }
                .no3 {
                    left: 0px;
                    top: 230px;
                }
                .no4 {
                    left: 970px;
                    top: 235px;
                }
            }
            .main {
                width: 340px;
                height: 210px;
                margin: 0 auto;
                line-height: 40px;
                text-align: center;
                span {
                    font-size: 22px;
                    font-weight: bold;
                    color: #2D89FA;
                }
            }
        }
    }
    .floor_demonstration {
        padding-bottom: 70px;
        background-color: #F5F9FC;
        .big_detail {
            font-size: 16px;
            margin-top: -20px;
            text-align: center;
        }
        ul {
            padding-top: 50px;
            display: flex;
            justify-content: space-around;
            li {
                text-align: center;
                font-size: 18px;
                font-weight: bold;
                img {
                    margin-bottom: 20px;
                }
            }  
            
        }
    }
    .service_process {
        padding-bottom: 70px;
        background-color: #fff;
        ul {
            padding-top: 40px;
            display: flex;
            justify-content: space-between;
            li {
                text-align: center;
                font-size: 18px;
                font-weight: bold;
                img {
                    margin-bottom: 20px;
                }
            }  
            
        }
    }
}