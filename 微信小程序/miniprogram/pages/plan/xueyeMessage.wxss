.page {
  padding:0 30rpx;
  font-size: 28rpx;
  background-color: #fff;
}
.page .main {
  border-bottom: 1px solid #DEDEDE;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  height: 84rpx;
  line-height: 84rpx;

}
.page .main text {
  color: #F50505;
  position: relative;
  top: 4rpx;
}
.page .main image {
  width: 17rpx;
  height: 23rpx;
}
.page .main .mid{
  flex: 1;
  height: 84rpx;
}
.picker {
  height: 84rpx;
}
.fixed_btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  color: #fff;
  text-align: center;
  background-color: #3979FD;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
}
.subject {
  padding: 25rpx 0 120rpx 0;
}
.subject .box {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 15rpx 0;
  justify-content: space-between;
}
.subject .box input {
  box-sizing: border-box;
  width: 270rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  border: 1px solid #dedede;
}